<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

    <icon />
    <display-name>Live Online Bookstore</display-name>
    <description>Live Online Bookstore version 1.0</description>
    <distributable />

    <filter>
        <filter-name>globalFilter</filter-name>
        <filter-class>com.crackj2ee.bookstore.web.filter.GlobalFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>globalFilter</filter-name>
        <url-pattern>*.jspx</url-pattern>
    </filter-mapping>

    <!-- spring dispatch servlet -->
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>com.crackj2ee.bookstore.spring.DispatcherServletEx</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.jspx</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>/listBooks.jspx</welcome-file>
    </welcome-file-list>

</web-app>
