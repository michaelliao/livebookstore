<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx
       http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-2.0.xsd"

       default-autowire="no"
       default-lazy-init="false"
       default-dependency-check="none"
>

			<bean
					id="commentDao"
				class="net.livebookstore.dao.hibernate.CommentDaoImpl"
			>

						<property name="hibernateTemplate">
								<ref bean="hibernateTemplate"/>
						</property>

			</bean>

			<bean
					id="samplerAspect"
				class="net.livebookstore.jmx.SamplerAspect"
			>

			</bean>

			<bean
					name="sampler:name=HttpSampler"
				class="net.livebookstore.jmx.Sampler"
			>

			</bean>
			<bean
					name="sampler:name=BusinessSampler"
				class="net.livebookstore.jmx.Sampler"
			>

			</bean>
			<bean
					name="sampler:name=DaoSampler"
				class="net.livebookstore.jmx.Sampler"
			>

			</bean>

			<bean
					id="orderDao"
				class="net.livebookstore.dao.hibernate.OrderDaoImpl"
			>

						<property name="hibernateTemplate">
								<ref bean="hibernateTemplate"/>
						</property>

			</bean>

			<bean
					id="mailListener"
				class="net.livebookstore.mail.MailListener"
			>

						<property name="mailSender">
								<ref bean="mailSender"/>
						</property>

			</bean>

			<bean
					id="searchService"
				class="net.livebookstore.business.impl.SearchServiceImpl"
					init-method="init"
					destroy-method="destroy"
			>

						<property name="indexDirectory">
								<value>/WEB-INF/compass</value>
						</property>

			</bean>

			<bean
					id="categoryDao"
				class="net.livebookstore.dao.hibernate.CategoryDaoImpl"
					init-method="init"
			>

						<property name="hibernateTemplate">
								<ref bean="hibernateTemplate"/>
						</property>

			</bean>

			<bean
					id="accountDao"
				class="net.livebookstore.dao.hibernate.AccountDaoImpl"
			>

						<property name="hibernateTemplate">
								<ref bean="hibernateTemplate"/>
						</property>

			</bean>

			<bean
					id="businessService"
				class="net.livebookstore.business.impl.BusinessServiceImpl"
			>

						<property name="accountDao">
								<ref bean="accountDao"/>
						</property>
						<property name="bookDao">
								<ref bean="bookDao"/>
						</property>
						<property name="categoryDao">
								<ref bean="categoryDao"/>
						</property>
						<property name="commentDao">
								<ref bean="commentDao"/>
						</property>
						<property name="orderDao">
								<ref bean="orderDao"/>
						</property>

			</bean>

			<bean
					id="mailService"
				class="net.livebookstore.business.impl.MailServiceImpl"
			>

						<property name="connectionFactory">
								<ref bean="jmsConnectionFactory"/>
						</property>
						<property name="destination">
								<ref bean="jmsDestination"/>
						</property>
						<property name="from">
								<value>service@crackj2ee.com</value>
						</property>

			</bean>

			<bean
					id="bookDao"
				class="net.livebookstore.dao.hibernate.BookDaoImpl"
			>

						<property name="hibernateTemplate">
								<ref bean="hibernateTemplate"/>
						</property>

			</bean>

		<!--
			To include additional bean definitions for Spring in the generated
			application context file, add a file to your XDoclet merge directory
			called spring-beans.xml that contains the <bean></bean> markup.
		-->

</beans>
